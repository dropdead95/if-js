include ../reviews-section/reviews-section-content

mixin reviews-section
  section.reviews
    .reviews__container._container
      .reviews__slider.swiper
        .reviews__title._title-section Guest reviews
        .reviews__slider-wrapper.swiper-wrapper
          each slide in reviews
            .reviews__slide.swiper-slide
              .reviews__slide-image
                .reviews__slide-image_overlay #{ slide.price }
                img.reviews__slide-image-item(src=require(slide.image), alt='')
              .reviews__slide-content
                .reviews__slide-title
                  .reviews__slide-title-wrapper
                    .reviews__slide-title-hotel
                      | #{ slide.hotelName }
                    .reviews__slide-title-dest
                      | #{ slide.location }
                  .reviews__slide-title-rating
                    .slide-title-rating__num #{ slide.rating }
                    .slide-title-rating__quantity #{ slide.reviewsQty }
                .reviews__slide-user
                  .reviews__slide-user-icon
                    svg.slide-user-icon__item(viewbox='0 0 54 54', xmlns='http://www.w3.org/2000/svg')
                      path(
                        d='M27 0.333374C12.28 0.333374 0.333313 12.28 0.333313 27C0.333313 41.72 12.28 53.6667 27 53.6667C41.72 53.6667 53.6666 41.72 53.6666 27C53.6666 12.28 41.72 0.333374 27 0.333374ZM27 8.33337C31.4266 8.33337 35 11.9067 35 16.3334C35 20.76 31.4266 24.3334 27 24.3334C22.5733 24.3334 19 20.76 19 16.3334C19 11.9067 22.5733 8.33337 27 8.33337ZM27 46.2C20.3333 46.2 14.44 42.7867 11 37.6134C11.08 32.3067 21.6666 29.4 27 29.4C32.3066 29.4 42.92 32.3067 43 37.6134C39.56 42.7867 33.6666 46.2 27 46.2Z'
                      )
                  .reviews__slide-user-name
                    .slide-user-name__name #{ slide.userName }
                    .slide-user-name__country
                      .slide-user-name__country-img
                        img.slide-user-name__country-img-icon(src=require(slide.countryImage), alt='')
                      .slide-user-name__country-name #{ slide.country }
                .reviews__slide-desc
                  | #{ slide.comment }
          .reviews__slider-pagination.swiper-pagination
      a.reviews__slider-btn.swiper-button-next(href='#')
        img.reviews__slider-btn-icon(src=require('../../../assets/images/homes-section/icons/arrowbtn.svg'), alt='')
